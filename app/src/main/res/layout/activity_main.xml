<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="30dp"
    android:background="#F2000000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="50dp"
        android:gravity="right"
        android:layout_marginRight="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/rounded_activity_zone_24"
            android:background="@color/white"
            android:padding="5dp"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="30dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:src="@drawable/baseline_attach_money_24"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="30dp">
        <ImageView
            android:layout_width="50dp"
            android:src="@drawable/round_arrow_drop_down_circle_24"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:backgroundTint="#F4B65A"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="30dp"

            >
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txthistory"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="right"
                android:text=""
                android:layout_margin="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:textSize="90px"
                />
            <TextView
                android:id="@+id/txtcurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:textColor="#000000"
                android:text=""
                android:layout_margin="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:textSize="90px"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn00"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:background="#E6CDC1C1"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:gravity="center"
        >


        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="60dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                >

                <TextView
                    android:id="@+id/btnclear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C8C1C1"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="#000000"
                    android:textSize="50px"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btnmodulus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >

                <TextView
                    android:id="@+id/btnback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Back"
                    android:textSize="40px"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/btndivide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textStyle="bold"
                    android:textSize="50px"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"

            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"

                >
                <TextView
                    android:id="@+id/btn7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"
                >
                <TextView
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="50px"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btn9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btnmultiply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:layout_gravity="center"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
    android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"

            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"

                >
                <TextView

                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="50px"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btn5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btn6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="50px"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btnsubtract"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="60px"
                    android:textStyle="bold"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"

            android:layout_marginTop="20dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                >
                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C8C1C1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="50px"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="#C8C1C1"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btnadd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:background="#C8C1C1"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"

            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"

                >
                <TextView
                    android:id="@+id/btndoublezero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00"
                    android:textSize="50px"
                    android:background="#C8C1C1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btn0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="50px"
                    android:background="#C8C1C1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >

                <TextView
                    android:id="@+id/btn."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#C8C1C1"
                    android:gravity="center"
                    android:text="."
                    android:textSize="50px"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"

                >
                <TextView
                    android:id="@+id/btnequal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textSize="70px"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="#42F342"

                    android:gravity="center"/>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>